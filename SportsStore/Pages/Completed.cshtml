@page

<div class="h-[85vh] flex flex-col justify-center">
	<p class="text-5xl font-bold text-center mb-3">THANK YOU!</p>
	<p class="text-3xl">The order @OrderId has been processed. Thanks for placing an order.</p>
	<div class="text-center mt-5">
		<a class="border border-gray-300 w-full px-3 py-2 rounded-2 hover:bg-gray-700 hover:text-white" asp-controller="Home">Return to Store</a>
	</div>
</div>

@functions {
	[BindProperty(SupportsGet = true)]
	public string? OrderId { get; set; }
}
