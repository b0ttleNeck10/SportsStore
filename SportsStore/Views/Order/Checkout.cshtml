@model Order

<div class="flex flex-column justify-center items-center">
	<p class="text-3xl font-medium">Check out now!</p>
	<p>Please enter your details, and we'll ship your goods right away.</p>
</div>


<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
	<p class="text-xl font-medium">Ship to</p>
	<div class="form-group">
		<label class="font-sm">Name:</label>
		<input asp-for="Name" class="form-control"/>
		<div asp-validation-for="Name" class="text-danger"></div>
	</div>
	<p class="text-xl font-medium">Address</p>
	<div class="form-group">
		<label class="font-sm">Address:</label>
		<input asp-for="Line1" class="form-control"/>
	</div>
	<div class="form-group">
		<label class="font-sm">Line 2:</label>
		<input asp-for="Line2" class="form-control" />
	</div>
	<div class="form-group">
		<label class="font-sm">Line 3:</label>
		<input asp-for="Line3" class="form-control" />
	</div>
	<div class="grid grid-cols-4 gap-3">
		<div>
			<label class="font-sm">City:</label>
			<input asp-for="City" class="form-control" />
		</div>
		<div>
			<label class="font-sm">State/Region:</label>
			<input asp-for="State" class="form-control" />
		</div>
		<div>
			<label class="font-sm">Zip Code:</label>
			<input asp-for="Zip" class="form-control" />
		</div>
		<div>
			<label class="font-sm">Country:</label>
			<input asp-for="Country" class="form-control" />
		</div>
		
	</div>
	<p class="text-xl font-medium">Options</p>
	<div class="checkbox text-base">
		<label>
			<input asp-for="GiftWrap" /> Gift wrap these items
		</label>
	</div>
	<div class="text-right mt-3">
		<input class="rounded-2 p-2 border border-gray-400 hover:bg-gray-700 hover:text-white" type="submit" value="Complete Order" />
	</div>
</form>